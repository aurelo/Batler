<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    <EditText 
        android:id="@+id/tag_detail_tag_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tag_detail_activity_enter_tag_name"
        android:inputType="text"
        />
    <EditText 
        android:id="@+id/tag_detail_tag_description"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/tag_detail_activity_enter_tag_description"
        android:inputType="textMultiLine"
        android:lines="3"
        />
    
    <Button
        android:id="@+id/tag_detail_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right" 
        android:text="@string/tag_detail_activity_save_tag"
        />
    

</LinearLayout>